<script id="account-sidebar" type="text/x-handlebars-template">

    <ul class="sidebar-list sidebar-list--account">

        <li class="button button--teal account-nav-link \{{#ifeq selectedRoute 'info' }}account-nav-link--active\{{/ifeq}}" data-section="info">
            <i class="fa fa-user"></i>
            <span class="account-nav-link__title">My Information</span>
        </li>

        <li class="button button--teal account-nav-link \{{#ifeq selectedRoute 'events' }}account-nav-link--active\{{/ifeq}}" data-section="events">
            <i class="fa fa-calendar"></i>
            <span class="account-nav-link__title">Events</span>
        </li>

        {{#if shouldRenderChildrenSection}}
        <li class="button button--teal account-nav-link \{{#ifeq selectedRoute 'children' }}account-nav-link--active\{{/ifeq}}" data-section="children">
            <i class="fa fa-users"></i>
            <span class="account-nav-link__title">{{#ifeq user.userType 'family'}}Bookmarked Profiles{{else}}Children{{/ifeq}}</span>
        </li>
        {{/if}}
		
		<li class="button button--teal account-nav-link \{{#ifeq selectedRoute 'email-list' }}account-nav-link--active\{{/ifeq}}" data-section="email-list">
            <i class="fa fa-envelope"></i>
            <span class="account-nav-link__title">Mailing Lists</span>
        </li>

        {{#if shouldRenderInquiriesSection}}
        <li class="button button--teal account-nav-link \{{#ifeq selectedRoute 'inquiries' }}account-nav-link--active\{{/ifeq}}" data-section="inquiries">
            <i class="fa fa-inbox"></i>
            <span class="account-nav-link__title">Inquiries</span>
        </li>
        {{/if}}

        {{#ifeq user.userType 'social worker'}}
         <li class="button button--teal account-nav-link \{{#ifeq selectedRoute 'registration-links' }}account-nav-link--active\{{/ifeq}}" data-section="registration-links">
            <i class="fa fa-inbox"></i>
            <span class="account-nav-link__title">Registration</span>
        </li>
        {{/ifeq}}

        {{#ifeq user.userType 'admin'}}
        <a href="/keystone"><li class="button button--green account-nav-link account-nav-link--admin">Admin Panel</li></a>
        <a href="/tools"><li class="button button--green account-nav-link account-nav-link--admin">Dashboard</li></a>
        {{/ifeq}}
    </ul>

</script>