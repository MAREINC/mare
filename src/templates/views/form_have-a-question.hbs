<div class="card card--vertical card--large-padding">

	<h1 class="card__title">Have a Question?</h1>

	<div class="form-intro">
		We are here to help! For general information regarding adoption from foster care, check out our Considering
		Adoption Pages. Don't see what you need? Call us at (617) 964-6273 (Monday - Friday, 9am - 5pm) or send
		us an email.
	</div>

	<section class="have-a-question-form">

		<form action="/forms/have-a-question" class="form--have-a-question" method="POST">

			<section class="form-section">
				<div class="form-section-header">Details</div>

				<span class="required required-description">* Required</span>

				<div class="row">
					<div class="col-sm-12 form-group">
						<input type="text" class="input" id="first-name" name="firstName" data-parsley-error-message="required" required="">
						<label for="firstName" class="label required-field">First Name</label>
					</div>
					<div class="col-sm-12 form-group">
						<input type="text" class="input" id="last-name" name="lastName" data-parsley-error-message="required" required="">
						<label for="lastName" class="label required-field">Last Name</label>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 form-group">
						<input type="text" class="input" id="email" name="email" data-parsley-type="email" data-parsley-trigger="change" data-parsley-error-message="valid email required" required="">
						<label for="email" class="label required-field">Email</label>
					</div>
					<div class="col-sm-12 form-group">
						<input type="text" class="input" id="phone" name="phone" data-parsley-required-message="required" required=""
							data-parsley-pattern="/^\d{3}-\d{3}-\d{4}$/" data-parsley-pattern-message="Please use xxx-xxx-xxxx format">
						<label for="phone" class="label required-field">Phone Number</label>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-24 form-group">
						<span id="contact-method-error-container" class="error-container">
							<span class="contact-method-select-text required-field">I prefer to be contacted via</span> &nbsp;&nbsp;
								<label class="radio-inline"><input type="radio" name="contactMethod" value="email" data-parsley-errors-messages-disabled="true" data-parsley-class-handler="#contact-method-error-container" required="">email</label>
								<label class="radio-inline"><input type="radio" name="contactMethod" value="phone" data-parsley-errors-messages-disabled="true" data-parsley-class-handler="#contact-method-error-container" required="">phone</label>
						</span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-sm-16">
						<textarea class="input" id="question" name="question" rows="6" data-parsley-error-message="required" required=""></textarea>
						<label for="question" class="label required-field">Question/Comment</label>
					</div>
				</div>

				<div class="g-recaptcha pb-2" data-sitekey="6LeyS1MeAAAAABJT2VxaRWS1XTn20Ik5CgxtqhhA" data-callback="enableSubmit"></div>
				<button id="submitQuestion" class="button button--teal button--disabled" type="submit" disabled="true">Submit</button>
				
			</section>

		</form>

	</section>

	<!-- load recaptcha script -->
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>
	<script type="text/javascript">
		function enableSubmit() {
			var $submitButton = $( '#submitQuestion' );
			$submitButton.removeClass( 'button--disabled' );
			$submitButton.attr( 'disabled', false );
		}
	</script>
</div>
